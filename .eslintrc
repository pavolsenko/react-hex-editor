{
  "extends": [
    "react-app",
    "prettier"
  ],
  "rules": {
    "react/jsx-max-props-per-line": [
      2,
      {
        "maximum": 1,
        "when": "always"
      }
    ],
    "indent": [
      "error",
      4
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ]
  },
  "plugins": [
    "prettier"
  ],
  "ignorePatterns": [
    "**/*.png",
    "**/*.json"
  ]
}
